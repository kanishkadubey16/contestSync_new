model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  
  reminders Reminder[]
  history   ContestHistory[]
}

model Contest {
  id          String   @id @default(cuid())
  name        String   @unique
  platform    String
  startTime   DateTime
  duration    Int
  url         String
  createdAt   DateTime @default(now())
  
  reminders Reminder[]
}

model Reminder {
  id        String   @id @default(cuid())
  userId    String
  contestId String
  createdAt DateTime @default(now())
  
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)
  
  @@unique([userId, contestId])
}

model ContestHistory {
  id          String   @id @default(cuid())
  userId      String
  contestName String
  platform    String
  date        DateTime
  questions   Int      @default(0)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}